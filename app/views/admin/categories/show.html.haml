%div{class: "links"}
  = link_to "Edit Category", edit_admin_category_path(@category), :class => "edit-button"
  = link_to "Delete", admin_category_path(@category), method: :delete, :class => "delete-button"

%h1 #{@category.name}

.category-items
  - @category.ideas.each do |idea|
    %h3
      = link_to "#{idea.title}", user_idea_path(idea.user, idea)
